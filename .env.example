# WhatsApp AI Agent Environment Variables
# Copy this file to .env and fill in your actual values

# ====================
# GENERAL SETTINGS
# ====================

# Environment (development, production, testing)
ENVIRONMENT=development

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ====================
# AI CONFIGURATION
# ====================

# AI Provider (openai, anthropic, local)
AI_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# AI Model to use
AI_MODEL=gpt-3.5-turbo

# Maximum tokens for AI responses
AI_MAX_TOKENS=1000

# Temperature for AI responses (0.0-1.0, higher = more creative)
AI_TEMPERATURE=0.7

# System prompt for AI behavior
AI_SYSTEM_PROMPT=You are a helpful AI assistant responding to WhatsApp messages. Be concise, friendly, and helpful in your responses.

# ====================
# WHATSAPP CONFIGURATION
# ====================

# WhatsApp client type (web, business_api, unofficial)
WHATSAPP_CLIENT_TYPE=web

# Session storage path for WhatsApp Web
WHATSAPP_SESSION_PATH=./session

# WhatsApp Business API (if using business_api)
WHATSAPP_BUSINESS_API_TOKEN=your_business_api_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here

# ====================
# BOT BEHAVIOR
# ====================

# Bot name (used for mention detection)
BOT_NAME=AI Assistant

# Whether to respond to group messages
RESPOND_TO_GROUPS=false

# Whether to require bot mention in group messages
REQUIRE_MENTION_IN_GROUPS=true

# Rate limiting settings
RATE_LIMIT_ENABLED=true
MAX_MESSAGES_PER_HOUR=30

# Send error notifications to users
SEND_ERROR_NOTIFICATIONS=false

# ====================
# CONTACT MANAGEMENT
# ====================

# Allowed contacts (comma-separated phone numbers or IDs)
# Leave empty to allow all contacts
ALLOWED_CONTACTS=

# Blocked contacts (comma-separated phone numbers or IDs)
BLOCKED_CONTACTS=

# ====================
# DATABASE CONFIGURATION (Optional)
# ====================

# Database URL for conversation storage
# DATABASE_URL=sqlite:///./whatsapp_ai.db

# Redis URL for session storage (optional)
# REDIS_URL=redis://localhost:6379/0

# ====================
# ADVANCED SETTINGS
# ====================

# Maximum conversation history length per contact
AI_MAX_HISTORY_LENGTH=10

# Webhook URL for incoming messages (if using Business API webhooks)
# WEBHOOK_URL=https://your-domain.com/webhook

# Webhook verification token
# WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# ====================
# DEVELOPMENT/TESTING
# ====================

# Enable debug mode
# DEBUG=true

# Test mode (prevents actual message sending)
# TEST_MODE=false

# Mock AI responses (for testing without API calls)
# MOCK_AI_RESPONSES=false